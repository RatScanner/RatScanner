<UserControl x:Class="RatScanner.View.BlazorUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RatScanner.View"
			 xmlns:ratrazor="clr-namespace:RatRazor;assembly=RatRazor"
		     xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Wpf;assembly=Microsoft.AspNetCore.Components.WebView.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="280">
    <Grid>
		<blazor:BlazorWebView HostPage="wwwroot/index.html" Services="{StaticResource services}" Panel.ZIndex="999">
			<blazor:BlazorWebView.RootComponents>
				<blazor:RootComponent Selector="#app" ComponentType="{x:Type ratrazor:App}" />
			</blazor:BlazorWebView.RootComponents>
		</blazor:BlazorWebView>
	</Grid>
</UserControl>

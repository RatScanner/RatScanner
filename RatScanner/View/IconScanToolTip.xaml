<Window x:Class="RatScanner.View.IconScanToolTip"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:framework="clr-namespace:RatScanner.Framework"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:viewmodel="clr-namespace:RatScanner.ViewModel"
				d:DataContext="{d:DesignInstance Type=viewmodel:ToolTipVM}"
				x:ClassModifier="internal"
				AllowsTransparency="True"
				Focusable="False"
				IsTabStop="False"
				ResizeMode="NoResize"
				ScrollViewer.VerticalScrollBarVisibility="Disabled"
				ShowInTaskbar="False"
				SizeToContent="WidthAndHeight"
				Topmost="True"
				WindowStyle="None"
				mc:Ignorable="d">

	<Grid Background="{Binding WarningBrush}">
		<Image Source="{Binding IconPath}"
					 Stretch="None">
			<Image.LayoutTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="{Binding ScaleFactor}"
													ScaleY="{Binding ScaleFactor}" />
					<RotateTransform Angle="{Binding IconAngle}" />
				</TransformGroup>
			</Image.LayoutTransform>
		</Image>
		<StackPanel>
			<framework:OutlinedTextBlock Fill="Black"
																	 FontFamily="Roboto Normal"
																	 FontSize="14"
																	 FontWeight="Bold"
																	 Stroke="{Binding WarningBrush}"
																	 StrokeThickness="1"
																	 Text="{Binding Avg24hPrice}" />
		</StackPanel>
	</Grid>
</Window>

<UserControl x:Class="RatScanner.View.MainMenu"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						 xmlns:viewmodel="clr-namespace:RatScanner.ViewModel"
						 d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowVM}"
						 d:DesignHeight="370"
						 d:DesignWidth="280"
						 x:ClassModifier="internal"
						 Background="#444444"
						 mc:Ignorable="d">

	<Grid Margin="10,0">
		<StackPanel Grid.Row="0">
			<Grid Margin="0,10,0,5">
				<StackPanel Grid.Column="0"
										VerticalAlignment="Center"
										Orientation="Horizontal">
					<WrapPanel VerticalAlignment="Center">
						<Rectangle Width="20"
											 Height="20"
											 Margin="5,0,0,0">
							<Rectangle.Fill>
								<SolidColorBrush Color="#EEEEEE" />
							</Rectangle.Fill>
							<Rectangle.OpacityMask>
								<ImageBrush ImageSource="../Resources/iconMods.png" />
							</Rectangle.OpacityMask>
						</Rectangle>

						<Separator Margin="1,1,3,1">
							<Separator.LayoutTransform>
								<RotateTransform Angle="90" />
							</Separator.LayoutTransform>
						</Separator>

						<WrapPanel.ToolTip>
							<TextBlock>
								Prices include attached mods
							</TextBlock>
						</WrapPanel.ToolTip>

						<WrapPanel.Style>
							<Style TargetType="WrapPanel">
								<Style.Triggers>
									<DataTrigger Binding="{Binding Path=HasMods}"
															 Value="True">
										<Setter Property="Visibility"
														Value="Visible" />
									</DataTrigger>
									<DataTrigger Binding="{Binding Path=HasMods}"
															 Value="False">
										<Setter Property="Visibility"
														Value="Collapsed" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</WrapPanel.Style>
					</WrapPanel>
					<Label Padding="0"
								 VerticalAlignment="Center"
								 Content="{Binding Name}" />
				</StackPanel>

				<Border Grid.Column="1"
								HorizontalAlignment="Right"
								Background="#EEEEEE"
								CornerRadius="3">
					<Image Height="32"
								 MinWidth="32"
								 MaxWidth="96"
								 Source="{Binding IconPath}" />
				</Border>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
			</Grid>

			<StackPanel>
				<Separator />
				<Grid>
					<Label Grid.Column="0"
								 Content="Average Day Price" />
					<Label Grid.Column="1"
								 Content="{Binding Avg24hPrice}" />

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
				</Grid>

				<Grid>
					<Label Grid.Column="0"
								 Content="Price per Slot" />
					<Label Grid.Column="1"
								 Content="{Binding PricePerSlot}" />

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
				</Grid>
			</StackPanel>

			<StackPanel>
				<Separator />
				<Grid>
					<Label Grid.Column="0"
								 Content="Trader" />
					<Label Grid.Column="1"
								 Content="{Binding TraderName}" />

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
				</Grid>

				<Grid>
					<Label Grid.Column="0"
								 Content="Buy Price" />
					<Label Grid.Column="1"
								 Content="{Binding BestTraderPrice}" />

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
				</Grid>

				<Grid>
					<Label Grid.Column="0"
								 Content="Max Buy Price" />
					<Label Grid.Column="1"
								 Content="{Binding MaxTraderPrice}" />

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<Grid.Style>
						<Style TargetType="Grid">
							<Style.Triggers>
								<DataTrigger Binding="{Binding Path=HasMods}"
														 Value="True">
									<Setter Property="Visibility"
													Value="Visible" />
								</DataTrigger>
								<DataTrigger Binding="{Binding Path=HasMods}"
														 Value="False">
									<Setter Property="Visibility"
													Value="Collapsed" />
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</Grid.Style>
				</Grid>

				<StackPanel.Style>
					<Style TargetType="StackPanel">
						<Style.Triggers>
							<DataTrigger Binding="{Binding TraderName}"
													 Value="">
								<Setter Property="Height"
												Value="0" />
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</StackPanel.Style>
			</StackPanel>

			<StackPanel>
				<Separator />

				<Grid>
					<Label Grid.Column="0"
								 Content="Links" />
					<TextBlock Grid.Column="1"
										 Margin="0,0,5,0"
										 VerticalAlignment="Center">
						<Hyperlink NavigateUri="{Binding WikiLink}"
											 RequestNavigate="HyperlinkRequestNavigate">
							<Underline>Wiki</Underline>
						</Hyperlink>
					</TextBlock>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
				</Grid>
			</StackPanel>
			<Separator />

			<Grid>
				<Label Grid.Column="0"
							 HorizontalAlignment="Left"
							 Content="Quest &amp; Hideout" />
				<StackPanel Grid.Column="1"
										Orientation="Horizontal"
										HorizontalAlignment="Right">
					<Label Content="{Binding TrackingNeeds.QuestRemaining, FallbackValue=0}" />
					<Image Source="{StaticResource questIcon}"
								 Height="20" />
				</StackPanel>
				<StackPanel Grid.Column="2"
										Orientation="Horizontal"
										HorizontalAlignment="Right">
					<Label Content="{Binding TrackingNeeds.HideoutRemaining, FallbackValue=0}" />
					<Image Source="{StaticResource hideoutIcon}"
								 Height="20" />
				</StackPanel>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
			</Grid>

			<!-- Optional teammate section -->
			<StackPanel x:Name="TeammateQHTrackingDisplay"
									d:Visibility="Collapsed">
				<Separator />

				<Grid>
					<Label Grid.Column="0"
								 Content="Teammate"
								 FontWeight="Medium"
								 HorizontalAlignment="Left" />
					<Label Grid.Column="1"
								 Content="Quest"
								 FontWeight="Medium"
								 HorizontalAlignment="Center" />
					<Label Grid.Column="2"
								 Content="Hideout"
								 FontWeight="Medium"
								 HorizontalAlignment="Right" />
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="2*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
				</Grid>

				<ListView ItemsSource="{Binding TrackingTeamNeeds}"
									Background="Transparent"
									BorderThickness="0">
					<ListView.ItemContainerStyle>
						<Style TargetType="ListViewItem">
							<Setter Property="HorizontalContentAlignment"
											Value="Stretch" />
							<Setter Property="Focusable"
											Value="False" />
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="ListViewItem">
										<ContentPresenter Margin="0, 2" />
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</ListView.ItemContainerStyle>

					<ListView.ItemTemplate>
						<DataTemplate>
							<Grid Height="17">
								<Grid.Resources>
									<Style TargetType="Label"
												 BasedOn="{StaticResource {x:Type Label}}">
										<Setter Property="Margin"
														Value="0" />
										<Setter Property="Padding"
														Value="0" />
										<Setter Property="HorizontalAlignment"
														Value="Center" />
									</Style>
								</Grid.Resources>
								<Label Grid.Column="0"
											 Margin="5, 0"
											 HorizontalAlignment="Left"
											 Content="{Binding Key}" />
								<Label Grid.Column="1"
											 Content="{Binding Value.QuestRemaining}" />
								<Label Grid.Column="2"
											 Content="{Binding Value.HideoutRemaining}" />
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="2*" />
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="*" />
								</Grid.ColumnDefinitions>
							</Grid>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</StackPanel>

			<Separator />

			<Grid>
				<Label Grid.Column="0"
							 Content="Updated"
							 FontSize="12" />
				<Label Grid.Column="1"
							 Content="{Binding Updated}"
							 FontSize="12" />

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
			</Grid>
		</StackPanel>

		<Grid Grid.Row="1"
					Margin="-5,10">
			<StackPanel Grid.Column="0"
									VerticalAlignment="Bottom"
									Orientation="Horizontal">
				<Button Margin="5,0"
								Padding="0"
								Background="#E64413">
					<Hyperlink NavigateUri="{Binding PatreonLink}"
										 RequestNavigate="HyperlinkRequestNavigate"
										 TextDecorations="">
						<Label Content="Patreon" />
					</Hyperlink>
				</Button>

				<Button Margin="5,0"
								Padding="0"
								Background="#7289DA">
					<Hyperlink NavigateUri="{Binding DiscordLink}"
										 RequestNavigate="HyperlinkRequestNavigate"
										 TextDecorations="">
						<Label Content="Discord" />
					</Hyperlink>
				</Button>

				<Button Margin="5,0"
								Padding="0"
								Background="#24292E">
					<Hyperlink NavigateUri="{Binding GithubLink}"
										 RequestNavigate="HyperlinkRequestNavigate"
										 TextDecorations="">
						<Label Content="GitHub" />
					</Hyperlink>
				</Button>
			</StackPanel>

			<Button Grid.Column="1"
							MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
							Margin="5,0"
							BorderThickness="0"
							Click="OpenSettingsWindow">
				<Image Height="24"
							 Source="../Resources/settings.png" />
			</Button>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
		</Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
	</Grid>
</UserControl>
